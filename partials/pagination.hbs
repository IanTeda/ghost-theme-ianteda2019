<ul class="pagination center-align">
    <li class="{{#unless prev}}disabled{{else}}wave-effect{{/unless}}"><a href="{{page_url prev}}"><i class="material-icons">chevron_left</i></a></li>
    <li class="wave-effect">Page {{page}} of {{pages}}</li>
    <li class="{{#unless next}}disabled{{else}}wave-effect{{/unless}}"><a href="{{page_url next}}"><i class="material-icons">chevron_right</i></a></li>
</ul>