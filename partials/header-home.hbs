{{!-- Header for home (landing) page --}}
<header id="header" class="header-home z-depth-1 flow-text" style="background-image: url({{#if @blog.cover_image}}{{@blog.cover_image}}{{else}}{{asset "images/cover-home.jpg"}}{{/if}})">
    {{> navbar}}

    <div class="valign-wrapper">

        <div class="container">
            <div class="row center">
                <h1 class="header white-text"><strong>{{@blog.title}}</strong></h1>

                <nav class="transparent nav-center z-depth-0">
                    <div class="nav-wrapper white-text">
                        {{@blog.description}}
                    </div>
                </nav>

            </div>
        </div>

    </div>
    <div class="container">
        <div class="row center">
            <a href="#home-about"><i class="white-text medium material-icons center-align animated infinite bounce delay-2s slow">details</i></a>
        </div>
    </div>
</header>