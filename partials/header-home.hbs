{{!-- Header for home (landing) page --}}
{{> navbar}}
<header id="header" class="header-home z-depth-1 flow-text"
    style="background-image: url({{#if @site.cover_image}}{{img_url @site.cover_image size="xl"}}{{else}}{{asset "images/cover-home.jpg"}}{{/if}})">

    <div class="valign-wrapper">

        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="col s12 m6 offset-m3 center">
                        {{#if @site.logo}}
                            <img class="responsive-img" src="{{img_url @site.logo size="m"}}" alt="Blog Logo" />
                        {{else}}
                            <h1 class="header white-text"><strong>{{@site.title}}</strong></h1>
                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="row center">
                <nav class="transparent nav-center z-depth-0 col s12">
                    <div class="nav-wrapper white-text">
                        {{@site.description}}
                    </div>
                </nav>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="row center">
            <a href="#home-about"><i
                    class="white-text medium material-icons center-align animated infinite bounce delay-2s slow">details</i></a>
        </div>
    </div>
</header>