{{!< default}}

<main class="index" role="main">
    {{> "header-index"}}

    <div class="container">
        <div class="row">
            {{!-- Blog Post Feed --}}
            <div class="col s12 l8 post-feed">
                <h4>Blog Posts</h4>
                <div class="divider"></div>
                {{#foreach posts}}
                    {{> post-card}}
                {{/foreach}}

                {{pagination}}
            </div>

            {{!--RHS Bar with navigation and tags--}}
            <div class="col s12 l4">
                <div class="row">

                    {{!--Site Navigation--}}
                    {{> navigation-list}}

                    {{!-- Collection of featured posts --}}
                    {{> featured-list}}

                    {{!-- Collection of blog tags --}}
                    {{> tags-popular-list}}
                </div>

            </div>
        </div>

    </div>
    {{!-- reset --}}

</main>